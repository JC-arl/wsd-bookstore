# .env.example
# 이 파일을 복사하여 .env 파일을 생성하고, 실제 값으로 변경하세요.

##############################
# Application
##############################
SPRING_PROFILES_ACTIVE=local
APP_PORT=9090
serverport=9090

##############################
# Database (로컬 개발환경)
##############################
DB_URL=jdbc:mysql://localhost:3306/bookstore?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul
DB_USERNAME=bookstore_user
DB_PASSWORD=your_secure_password_here

# Database (JCloud 배포환경 - 주석 처리)
# DB_URL=jdbc:mysql://your_jcloud_ip:port/bookstore?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul
# DB_USERNAME=bookstore_user
# DB_PASSWORD=your_jcloud_db_password

##############################
# JWT
##############################
JWT_SECRET=your_base64_encoded_secret_key_at_least_256_bits_long_for_hs256_algorithm
# Access Token 만료 시간 (밀리초)
# 15분 = 900000ms, 1시간 = 3600000ms
JWT_AT_EXPIRE=3600000
# Refresh Token 만료 시간 (밀리초)
# 7일 = 604800000ms
JWT_RT_EXPIRE=604800000

##############################
# Redis
##############################
REDIS_HOST=localhost
REDIS_PORT=6379

##############################
# JCloud (배포시 필요)
##############################
# jcloud_port=19088
# jcloud_pemkey=-----BEGIN RSA PRIVATE KEY-----
#               (여기에 실제 PEM 키 내용 입력)
#               -----END RSA PRIVATE KEY-----
